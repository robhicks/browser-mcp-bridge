{
  "name": "browser-mcp-bridge",
  "version": "2.0.0",
  "description": "Browser extension and MCP server bridge for Claude Code integration",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "cd server && npm start",
    "dev": "cd server && npm run dev",
    "setup": "node browser-mcp-bridge.js",
    "setup:dev": "node browser-mcp-bridge.js --dev",
    "install-server": "cd server && npm install",
    "install-all": "npm run install-server",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:start:dev": "pm2 start ecosystem.config.cjs --env development",
    "pm2:stop": "pm2 stop browser-mcp-server",
    "pm2:restart": "pm2 restart browser-mcp-server",
    "pm2:delete": "pm2 delete browser-mcp-server",
    "pm2:logs": "pm2 logs browser-mcp-server",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "test": "echo 'Tests not yet implemented'",
    "build": "echo 'Build process for extension packaging'",
    "clean": "rm -rf server/node_modules",
    "health-check": "curl http://localhost:6009/health || echo 'Server not running'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/browser-mcp-bridge.git"
  },
  "keywords": [
    "browser",
    "extension",
    "mcp",
    "claude-code",
    "devtools",
    "automation",
    "web-scraping"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/browser-mcp-bridge/issues"
  },
  "homepage": "https://github.com/your-username/browser-mcp-bridge#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "directories": {
    "server": "./server",
    "extension": "./extension",
    "docs": "./docs"
  },
  "dependencies": {
    "sharp": "^0.34.4"
  }
}